{
  "name": "TraktTo",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Lets you export trakt.tv lists to json.",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.trakt.tv/users*lists/*",
        "*://*.trakt.tv/users*watchlist",
        "*://*.trakt.tv/users*history/*",
        "*://*.trakt.tv/users*ratings/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "TraktTo",
    "default_popup": "popup/popup.html"
  }
}
