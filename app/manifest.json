{
  "name": "Trakt To Json",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Lets you export trakt.tv lists to json.",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.trakt.tv/users*lists*",
        "*://*.trakt.tv/users*watchlist",
        "*://*.trakt.tv/users*history**",
        "*://*.trakt.tv/users*ratings*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "TraktTo",
    "default_popup": "popup/popup.html"
  }
}
